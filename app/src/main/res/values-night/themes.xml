<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spothub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/sfpro_display</item>
        <item name="preferenceTheme">@style/SettingTheme</item>
    </style>

    <style name="AuthBackground">
        <item name="android:background">@drawable/auth_background_dark</item>
    </style>

    <style name="AuthLogo">
        <item name="android:src">@drawable/logo_dark</item>
    </style>

    <style name="ToolBarLogo">
        <item name="android:src">@drawable/logo_name_white</item>
    </style>

    <style name="navHeaderBackground">
        <item name="android:src">@drawable/nav_header_brackground_dark</item>
    </style>

    <style name="CustomMapSearchBar" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/primary_txt</item>
    </style>

    <style name="SettingTheme" parent="PreferenceThemeOverlay">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/primary_txt</item>
        <item name="android:textColorSecondary">@color/secondary_txt</item>
        <item name="android:thumbTint">@color/primary_btn</item>
        <item name="android:trackTint">@color/section</item>
    </style>


</resources>