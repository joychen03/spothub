<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--  LIGHT MODE  -->
    <style name="Theme.Spothub" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/sfpro_display</item>

    </style>


    <style name="AuthBackground">
        <item name="android:src">@drawable/auth_background</item>
    </style>

    <style name="AuthLogo">
        <item name="android:src">@drawable/logo_png</item>
    </style>


</resources>